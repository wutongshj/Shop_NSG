<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_item_goods_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwie.shop_nsg.sort.view.view.ItemGoodsDetailsActivity">


    <LinearLayout
        android:id="@+id/details_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF9700"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_action_back" />
    </LinearLayout>

    <!--主题数据部分-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/details_linear1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--视频播放器 展位图-->
            <include
                layout="@layout/simple_player_view_player"
                android:layout_width="match_parent"
                android:layout_height="220dp"/>
            <!--商品信息属性-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/search_goods_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dp"
                    android:text="商品标题名title"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/search_goods_subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dp"
                    android:text="商品介绍"
                    android:textColor="@color/gray"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/search_goods_bargainPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dp"
                    android:text="商品原价"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/search_goods_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="￥商品现价"
                        android:textColor="#f11"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/search_goods_salenum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-10dp"
                        android:layout_weight="1"
                        android:text="xxxx人付款"
                        android:textColor="@color/gray"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


    <!--底部栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite">

        <RadioButton
            android:id="@+id/kefu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/ic_goods_kefu"
            android:gravity="center_horizontal"
            android:text="客服"></RadioButton>

        <RadioButton
            android:id="@+id/dianpu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/ic_goods_store"
            android:gravity="center_horizontal"
            android:text="店铺"></RadioButton>

        <RadioButton
            android:id="@+id/shoucang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/ic_goods_cart"
            android:gravity="center_horizontal"
            android:text="收藏"></RadioButton>

        <!--加入购物车-->
        <Button
            android:id="@+id/add_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FEC70D"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/colorWhite"></Button>
        <!--立即购买-->
        <Button
            android:id="@+id/add_buy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF9700"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/colorWhite"></Button>
    </LinearLayout>

</RelativeLayout>
