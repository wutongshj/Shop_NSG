<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--第一部分：用户信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/first">
        <ImageView
            android:id="@+id/user_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:src="@mipmap/ic_default_user_head"/>
        <TextView
            android:id="@+id/login_success_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="未登录"/>
    </LinearLayout>

    <!--第二部分：商品，店铺，足迹信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/top_bg">

        <LinearLayout
            style="@style/AppUser_secord">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@mipmap/ic_collection_goods"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="商品：0"/>
        </LinearLayout>

        <LinearLayout
            style="@style/AppUser_secord">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@mipmap/ic_collection_store"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="商铺：0"/>
        </LinearLayout>

        <LinearLayout
            style="@style/AppUser_secord">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@mipmap/ic_user_footprint"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="我的足迹"/>
        </LinearLayout>

    </LinearLayout>

    <!--第三部分：全部订单-->
    <LinearLayout
        style="@style/AppUser_lists"
        android:layout_height="140dp">

        <LinearLayout
            style="@style/AppUser_lists_one">

            <ImageView
                style="@style/AppUser_lists_one_image"
                android:src="@mipmap/ic_user_order"/>

            <TextView
                style="@style/AppUser_lists_one_text"
                android:text="全部订单"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/AppUser_secord">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_user_order_wait_pay"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="未付款"/>

            </LinearLayout>

            <LinearLayout
                style="@style/AppUser_secord">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_user_order_wait_drive"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="待发货"/>

            </LinearLayout>

            <LinearLayout
                style="@style/AppUser_secord">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_user_order_wait_receipt"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="待收货"/>

            </LinearLayout>

            <LinearLayout
                style="@style/AppUser_secord">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_user_order_wait_comment"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="待评价"/>

            </LinearLayout>

            <LinearLayout
                style="@style/AppUser_secord">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_user_order_wait_refund"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="退款/货"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <!--第四部分：我的财产-->
    <LinearLayout
        style="@style/AppUser_lists"
        android:layout_height="140dp">

        <LinearLayout
            style="@style/AppUser_lists_one">

            <ImageView
                style="@style/AppUser_lists_one_image"
                android:src="@mipmap/ic_user_property"/>

            <TextView
                style="@style/AppUser_lists_one_text"
                android:text="我的财产"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/AppUser_secord">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_user_property_money"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="预存款"/>

            </LinearLayout>

            <LinearLayout
                style="@style/AppUser_secord">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_user_property_card"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="充值卡"/>

            </LinearLayout>

            <LinearLayout
                style="@style/AppUser_secord">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_user_property_vouchers"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="代金券"/>

            </LinearLayout>

            <LinearLayout
                style="@style/AppUser_secord">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_user_property_red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="红包"/>

            </LinearLayout>

            <LinearLayout
                style="@style/AppUser_secord">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_user_property_integral"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="积分"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <!--第五部分：收货地址和系统设置-->
    <LinearLayout
        style="@style/AppUser_lists"
        android:layout_height="180dp">

        <LinearLayout
            style="@style/AppUser_lists_one">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_user_address"/>

            <TextView
                style="@style/AppUser_lists_one_text"
                android:text="收货地址"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/AppUser_lists_one"
            android:layout_marginTop="15dp">

            <ImageView
                style="@style/AppUser_lists_one_image"
                android:src="@mipmap/ic_user_setting"/>

            <TextView
                style="@style/AppUser_lists_one_text"
                android:text="系统设置"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
